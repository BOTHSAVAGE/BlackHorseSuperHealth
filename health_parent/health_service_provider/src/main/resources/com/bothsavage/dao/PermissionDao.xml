<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bothsavage.dao.PermissionDao" >

    <select id="findByRoleId" parameterType="java.lang.Integer" resultType="com.bothsavage.pojo.Permission">
          select * from t_role_permission a ,t_role b where a.role_id = b.id and a.role_id = #{roleId}
    </select>

</mapper>