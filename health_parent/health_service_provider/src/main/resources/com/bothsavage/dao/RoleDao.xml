<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bothsavage.dao.RoleDao" >

    <select id="findByUserId" parameterType="java.lang.Integer" resultType="com.bothsavage.pojo.Role">
          select * from t_user_role a ,t_role b where a.role_id = b.id and a.user_id = #{userId}
    </select>

</mapper>